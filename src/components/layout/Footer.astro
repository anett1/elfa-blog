const year = new Date().getFullYear()
---

<footer class="site-footer">
  <div class="footer-wrap">
    <div class="footer-grid">

      <!-- Brand -->
      <div class="footer-col footer-brand">
        <a href="/" class="footer-logo"><em>Elfa</em> Publikacje</a>
        <p class="footer-tagline">
          Skład, korekta i projekt graficzny&nbsp;—<br />
          publikacje bez kompromisów.
        </p>
      </div>

      <!-- Contact -->
      <div class="footer-col">
        <p class="footer-heading">Kontakt</p>
        <div class="footer-links">
          <a href="mailto:aneta.jagla@elfapublikacje.com">
            aneta.jagla@elfapublikacje.com
          </a>
          <a href="tel:+48513090196">+48 513 090 196</a>
        </div>
      </div>

      <!-- Social -->
      <div class="footer-col">
        <p class="footer-heading">Znajdź nas</p>
        <div class="footer-social">
          <a
            href="https://www.facebook.com/elfapublikacje"
            target="_blank"
            rel="noopener"
            aria-label="Facebook Elfa Publikacje"
            class="social-link"
          >
            <svg aria-hidden="true" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
            </svg>
            Facebook
          </a>
          <a
            href="https://www.instagram.com/elfapublikacje/"
            target="_blank"
            rel="noopener"
            aria-label="Instagram Elfa Publikacje"
            class="social-link"
          >
            <svg aria-hidden="true" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
              <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>
            </svg>
            Instagram
          </a>
        </div>
      </div>

    </div>

    <div class="footer-bottom">
      <span>&copy; {year} ELFA Publikacje. Wszelkie prawa zastrzeżone.</span>
    </div>
  </div>
</footer>

<style is:global>
  .site-footer {
    --ink: #2a2a2a;
    --ink-soft: #4b4b4b;
    --accent: #b68b3c;
    --rule: #e8e0d6;

    width: 100vw;
    margin-left: calc(-50vw + 50%);
    box-sizing: border-box;
    border-top: 1px solid var(--rule);
    margin-top: 4rem;
    font-family: var(--sans);
  }

  html.dark .site-footer {
    --ink: rgba(255,255,255,0.85);
    --ink-soft: rgba(255,255,255,0.5);
    --rule: rgba(255,255,255,0.1);
  }

  .footer-wrap {
    max-width: 78ch;
    margin-inline: auto;
    padding: clamp(28px, 5vw, 48px) clamp(16px, 5vw, 28px) clamp(20px, 4vw, 32px);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.6fr 1fr 1fr;
    gap: 2.5rem 3rem;
    align-items: start;
  }

  .footer-col {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  /* Brand */
  .site-footer .footer-logo {
    display: inline-block;
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--ink);
    text-decoration: none;
    font-family: var(--serif, Georgia, serif);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .footer-logo em {
    font-style: italic;
    color: var(--ink);
  }

  .footer-tagline {
    font-size: 0.875rem;
    color: var(--ink-soft);
    line-height: 1.55;
    margin: 0;
  }

  /* Column headings */
  .footer-heading {
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--ink);
    margin: 0 0 0.6rem;
    padding: 0;
  }

  /* Contact links */
  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .site-footer .footer-links a {
    font-size: 0.875rem;
    color: var(--ink-soft);
    text-decoration: none;
    transition: color 0.2s ease;
    line-height: 1.4;
  }

  .site-footer .footer-links a:hover {
    color: var(--ink);
  }

  /* Social links */
  .footer-social {
    display: flex;
    flex-direction: column;
    gap: 0.45rem;
  }

  .site-footer .social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    font-size: 0.875rem;
    color: var(--ink-soft);
    text-decoration: none;
    transition: color 0.2s ease;
    line-height: 1.4;
  }

  .site-footer .social-link svg {
    width: 15px;
    height: 15px;
    flex-shrink: 0;
  }

  .site-footer .social-link:hover {
    color: var(--ink);
  }

  /* Bottom bar */
  .footer-bottom {
    margin-top: 2rem;
    padding-top: 1.25rem;
    border-top: 1px solid var(--rule);
    font-size: 0.8rem;
    color: var(--ink-soft);
    opacity: 0.7;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
    }

    .footer-brand {
      grid-column: 1 / -1;
    }

    .footer-wrap {
      padding-bottom: 2.5rem;
    }
  }

  @media (max-width: 400px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
