  <style is:global>
    /* ========== TOKI, ZMIENNE, BAZA ========== */
    :root{
      --bg:#faf7f2;
      --ink:#2a2a2a;
      --ink-soft:#4b4b4b;
      --accent:#b68b3c;
      --accent-ink:#6a521f;
      --rule:#e8e0d6;
      --shadow:0 10px 30px rgba(0,0,0,.06);
      --max:88ch;
    }
    * { box-sizing: border-box; }
    body{
      margin:0;
      color:var(--ink);
      background:var(--bg);
      font-family:"Tiempos Text","Tiempos","Times New Roman",Times,Georgia,serif;
      line-height:1.55;
      -webkit-font-smoothing:antialiased;
      text-rendering:optimizeLegibility;
      hyphens:none;
    }
    .wrap{max-width:var(--max); margin-inline:auto; padding:clamp(16px,5vw,28px)}
    section{padding:clamp(28px,8vw,56px) 0; border-top:1px solid var(--rule)}
    h1{font-size:clamp(1.8rem,6vw,3rem); line-height:1.1; margin:.35em 0 .4em}
    h2{font-size:clamp(1.3rem,4vw,2rem); margin:0 0 .4em}
    h3{font-size:1.1rem; margin:1.4rem 0 .5rem; font-variant: small-caps;}
    p{margin:.75rem 0}
    .kicker{color:var(--accent-ink); letter-spacing:.08em; text-transform:uppercase; font-size:.8rem}
    .lead{font-size:clamp(1rem,2.8vw,1.25rem); color:var(--ink-soft); max-width:60ch}
    .cta{margin-top:1.2rem; display:flex; gap:.8rem; flex-wrap:wrap}
    .btn{border:1px solid var(--accent); background:linear-gradient(180deg,#d7b976,#b68b3c); color:#fff; padding:.6rem .9rem; border-radius:999px; text-decoration:none; box-shadow:var(--shadow); font-size:.95rem}
    .btn--ghost{border-color:var(--rule); background:#fff; color:var(--ink);}
    .btn:hover{filter:saturate(110%)}

    /* ========== SIATKI OGÓLNE ========== */
    .grid{display:grid; gap:clamp(16px,4vw,24px)}
    .grid.cols-2{grid-template-columns:1fr}
    .grid.cols-3{grid-template-columns:1fr}
    @media(min-width:720px){.grid.cols-2{grid-template-columns:1fr 1fr}}
    @media(min-width:960px){.grid.cols-3{grid-template-columns:1fr 1fr 1fr}}

    /* ========== HERO ========== */
    .hero{padding:clamp(36px,8vw,88px) 0}

    /* ========== SOCIAL ========== */
    .social{display:flex; gap:.6rem; margin-top:.4rem}
    .social a{display:inline-flex; align-items:center; justify-content:center; width:38px; height:38px; border:1px solid var(--rule); border-radius:999px; background:#fff; box-shadow:var(--shadow); text-decoration:none; color:var(--ink-soft)}
    .social a:hover{transform:translateY(-1px); color:var(--ink)}
    .social svg{width:18px; height:18px}
    .social svg *{stroke:currentColor; fill:none; stroke-width:2; stroke-linecap:round; stroke-linejoin:round}
    .social svg .fill{fill:currentColor; stroke:none}

    /* ========== FOOTER ========== */
    footer{border-top:1px solid var(--rule); background:var(--bg)}
    .footgrid{display:grid; gap:24px}
    @media(min-width:820px){.footgrid{grid-template-columns:1fr 1fr}}

    /* ========== DRUK ========== */
    @media print{
      header.site, .cta .btn{display:none}
      body{background:#fff}
      section{break-inside:avoid}
    }

    /* ========== MASONRY ========== */
    .astro-masonry-grid { display:flex; gap:0; width:100%; column-gap:0; }
    .astro-masonry-grid_column { display:flex; flex-direction:column; gap:0; margin-left:6px; margin-right:6px; }
    .astro-masonry-grid_column:first-child { margin-left:0; }
    .astro-masonry-grid_column:last-child { margin-right:0; }
    .masonry-item { border-radius:8px; overflow:hidden; box-shadow:var(--shadow); transition:transform .2s ease; padding:0; background:#fff; margin-bottom:12px; }
    .masonry-item:hover { transform:translateY(-4px); box-shadow:0 12px 40px rgba(0,0,0,.12); }
    .masonry-item img { display:block; width:100%; height:auto; }

    /* =========================================================
       OFERTA – ikona po lewej, heading po prawej, tekst poniżej
       ========================================================= */
    #oferta { border-top:1px solid var(--rule); padding:clamp(40px,6vw,80px) 0; }
    .oferta-grid { display:grid; gap:3rem 2rem; }
    @media (min-width:900px){ .oferta-grid{ grid-template-columns:1fr 1fr; } }

    .oferta-card { border-top:1px solid var(--rule); padding-top:1.25rem; text-align:left; }

    /* Pasek nagłówkowy (ikona + tytuł) */
    .oferta-head{
      display:flex;
      align-items:center;         /* wyśrodkowanie w pionie ikony i tytułu */
      gap:.9rem;
      min-height:48px;
    }
    .oferta-icon{
      width:clamp(36px,4.5vw,56px); /* mniejsza ikona */
      height:auto;
      flex:0 0 auto;               /* nie rozciąga się */
      display:block;
      color:var(--accent-ink);
      opacity:.95;
    }
    #oferta .oferta-card h3{
      margin:0;                    /* zero marginesów w pasku nagłówkowym */
      background:none;
      color:var(--accent-ink);
      font-weight:500;
      font-size:clamp(1.05rem, 2.2vw, 1.35rem);
      text-transform:uppercase;
      letter-spacing:.06em;
      font-variant:normal;
      line-height:1.2;
    }

    /* Treści poniżej paska nagłówkowego – zaczynają od lewej krawędzi */
    .oferta-body{
      margin-top:.75rem;           /* separacja od paska */
    }
    #oferta .oferta-card p{
      margin:.5rem 0 .65rem;
      line-height:1.55;
      text-align:left;             /* wyraźne wyrównanie do lewej */
      hyphens:none;                /* bez dzielenia wyrazów w tym wariancie */
    }
    #oferta .oferta-card ul{
      margin:.4rem 0 .2rem 0;
      padding-left:1.1rem;         /* minimalna przestrzeń na punktor */
      list-style:disc;
    }
    #oferta .oferta-card li{ break-inside:avoid; }

    /* Mobile drobne dopieszczenie */
    @media (max-width:540px){
      .oferta-head{ gap:.7rem; }
      .oferta-icon{ width:40px; }
      #oferta .oferta-card h3{ font-size:1.02rem; }
    }

    /* ========== KONTAKT ========== */
    #kontakt ul { list-style:none; padding-left:0; margin:.5rem 0 1rem; }
    #kontakt ul li { margin-bottom:.4rem; position:relative; padding-left:1.2em; }
    #kontakt ul li::before { content:"•"; position:absolute; left:0; color:var(--accent-ink); font-weight:bold; }
    #kontakt a { color:var(--accent-ink); text-decoration:none; }
    #kontakt a:hover { text-decoration:underline; }
  </style>
</head>

