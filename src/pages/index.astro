    :root{
      --bg:#faf7f2;
      --ink:#2a2a2a;
      --ink-soft:#4b4b4b;
      --accent:#b68b3c;
      --accent-ink:#6a521f;
      --rule:#e8e0d6;
      --shadow:0 10px 30px rgba(0,0,0,.06);
      --max:78ch;
    }
    body{
      margin:0;
      color:var(--ink);
      background:var(--bg);
      font-family:"Tiempos Text","Tiempos","Times New Roman",Times,Georgia,serif;
      line-height:1.55;
      -webkit-font-smoothing:antialiased;
      text-rendering:optimizeLegibility;
      hyphens:auto;
    }
    .wrap{max-width:var(--max); margin-inline:auto; padding:clamp(16px,5vw,28px)}
    .hero{padding:clamp(36px,8vw,88px) 0}
    .kicker{color:var(--accent-ink); letter-spacing:.08em; text-transform:uppercase; font-size:.8rem}
    h1{font-size:clamp(1.8rem,6vw,3rem); line-height:1.1; margin:.35em 0 .4em}
    .lead{font-size:clamp(1rem,2.8vw,1.25rem); color:var(--ink-soft); max-width:60ch}
    .cta{margin-top:1.2rem; display:flex; gap:.8rem; flex-wrap:wrap}
    .btn{border:1px solid var(--accent); background:linear-gradient(180deg, #d7b976, #b68b3c); color:white; padding:.6rem .9rem; border-radius:999px; text-decoration:none; box-shadow:var(--shadow); font-size:.95rem}
    .btn--ghost{border-color:var(--rule); background:white; color:var(--ink);}
    .btn:hover{filter:saturate(110%)}

    section{padding:clamp(28px,8vw,56px) 0; border-top:1px solid var(--rule)}
    h2{font-size:clamp(1.3rem,4vw,2rem); margin:0 0 .4em}
    h3{font-size:1.1rem; margin:1.4rem 0 .5rem}
    p{margin:.75rem 0}

    .grid{display:grid; gap:clamp(16px,4vw,24px)}
    .grid.cols-2{grid-template-columns:1fr}
    .grid.cols-3{grid-template-columns:1fr}
    @media(min-width:720px){.grid.cols-2{grid-template-columns:1fr 1fr}}
    @media(min-width:960px){.grid.cols-3{grid-template-columns:1fr 1fr 1fr}}

    footer{border-top:1px solid var(--rule); background:var(--bg)}
    .footgrid{display:grid; gap:24px}
    @media(min-width:820px){.footgrid{grid-template-columns:1fr 1fr}}

    @media print{
      header.site, .cta .btn{display:none}
      body{background:white}
      section{break-inside:avoid}
    }

    .social{display:flex; gap:.6rem; margin-top:.4rem}
    .social a{display:inline-flex; align-items:center; justify-content:center; width:38px; height:38px; border:1px solid var(--rule); border-radius:999px; background:white; box-shadow:var(--shadow); text-decoration:none; color:var(--ink-soft)}
    .social a:hover{transform:translateY(-1px); color:var(--ink)}
    .social svg{width:18px; height:18px}
    .social svg *{stroke:currentColor; fill:none; stroke-width:2; stroke-linecap:round; stroke-linejoin:round}
    .social svg .fill{fill:currentColor; stroke:none}

    /* Masonry gallery styles */
    .astro-masonry-grid {
      display: flex;
      gap: 0;
      width: 100%;
      column-gap: 0;
    }
    .astro-masonry-grid_column {
      display: flex;
      flex-direction: column;
      gap: 0;
      margin-left: 6px;
      margin-right: 6px;
    }
    .astro-masonry-grid_column:first-child {
