    header.site .wrap{position:relative}
    /* Nawigacja — styl publikacyjny + responsywny hamburger */
    .nav-toggle{display:none; border:1px solid var(--rule); background:white; border-radius:999px; width:38px; height:38px; align-items:center; justify-content:center; box-shadow:var(--shadow)}
