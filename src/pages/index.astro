    }
    .masonry-item {
      border-radius: 8px;
      overflow: hidden;
      box-shadow: var(--shadow);
      transition: transform 0.2s ease;
      padding: 0;
      background: white;
      margin-bottom: 12px;
    }
    .masonry-item:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 40px rgba(0,0,0,.12);
    }
    .masonry-item img {
      display: block;
      width: 100%;
      height: auto;
