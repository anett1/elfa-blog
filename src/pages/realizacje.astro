<style>
  .realizacje {
    --shadow: 0 10px 30px rgba(0,0,0,.06);
    --rule: #e8e0d6;
    --accent: #b68b3c;
  }

  .wrap {
    max-width: 88ch;
    margin-inline: auto;
    padding: clamp(16px, 5vw, 28px);
  }

  .hero {
    padding: clamp(2rem, 6vw, 4rem) 0;
    text-align: center;
    border-bottom: 1px solid var(--rule);
  }

  .hero h1 {
    font-size: clamp(1.8rem, 5vw, 2.8rem);
    line-height: 1.15;
    margin: 0 0 0.5em;
  }

  .lead {
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    color: var(--text-secondary);
    max-width: 60ch;
    margin-inline: auto;
  }

  .gallery {
    padding: clamp(1.5rem, 4vw, 3rem) clamp(0.5rem, 2vw, 1.5rem);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    border: 1px solid var(--text-primary, #2a2a2a);
    background: var(--text-primary, #2a2a2a);
    color: var(--bg, #fff);
    padding: 0.6rem 1.2rem;
    border-radius: 999px;
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 600;
    transition: opacity 0.2s ease;
  }

  .btn:hover {
    opacity: 0.8;
  }
</style>

<style is:global>
  /* Masonry Grid */
  .astro-masonry-grid {
    display: flex;
    gap: 0;
    width: 100%;
    column-gap: 0;
  }

  .astro-masonry-grid_column {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-left: 6px;
    margin-right: 6px;
  }

  .astro-masonry-grid_column:first-child {
    margin-left: 0;
  }

  .astro-masonry-grid_column:last-child {
    margin-right: 0;
  }

  .masonry-item {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,.06);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    padding: 0;
    background: #fff;
    margin-bottom: 12px;
    display: block;
  }

  .masonry-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0,0,0,.12);
  }

  .masonry-item img {
    display: block;
    width: 100%;
    height: auto;
  }
</style>

<script>
  import GLightbox from 'glightbox';

  function initLightbox() {
    GLightbox({
      selector: '.glightbox',
      touchNavigation: true,
      loop: true,
    });
  }

  // Initialize on page load and after Astro view transitions
  document.addEventListener('DOMContentLoaded', initLightbox);
  document.addEventListener('astro:page-load', initLightbox);
</script>
