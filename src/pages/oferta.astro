<style>
  .oferta-page {
    --rule: #e8e0d6;
  }

  .container {
    max-width: 70ch;
    margin-inline: auto;
    padding-inline: 1.5rem;
  }

  .hero {
    padding: clamp(3rem, 8vw, 5rem) 0;
    text-align: center;
    border-bottom: 1px solid var(--rule);
  }

  .hero h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    line-height: 1.15;
    margin: 0 0 0.5em;
  }

  .lead {
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    color: var(--text-secondary);
    max-width: 55ch;
    margin-inline: auto;
  }

  .service {
    padding: clamp(3rem, 6vw, 5rem) 0;
    border-bottom: 1px solid var(--rule);
  }

  .service:last-child {
    border-bottom: none;
  }

  .service h2 {
    font-size: clamp(1.4rem, 3vw, 1.8rem);
    line-height: 1.25;
    margin: 0 0 1rem;
  }

  .service p {
    line-height: 1.7;
    margin: 1rem 0;
  }

  .placeholder-note {
    display: inline-block;
    background: var(--mark);
    color: var(--text-secondary);
    font-size: 0.9rem;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    margin-bottom: 1rem;
  }

  /* Smooth scroll for anchor links */
  html {
    scroll-behavior: smooth;
    scroll-padding-top: 5rem;
  }
</style>
